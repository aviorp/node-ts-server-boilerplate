generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "darwin"]
}

datasource db {
  provider = "mongodb"
  url      = env("DB_URI")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  firstName String
  image     String
  lastName  String
  password  String
  phone     String
  username  String
  isAdmin   Boolean? @default(false)
  // posts     Post[]
}

